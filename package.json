{
  "name": "nanospec",
  "version": "1.0.1",
  "description": "A lightweight library for executing a subset of gkerkin on top of mocha and jasmine.",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha 'test/**/*.spec.js'",
    "test:watch": "mocha 'test/**/*.spec.js' --watch",
    "grammar": "./node_modules/antlr4-cli/bin/antlr4.js -Dlanguage=JavaScript -o ./lib/parser NanoSpec.g4",
    "grammar:watch": "chokidar NanoSpec.g4 -c './node_modules/antlr4-cli/bin/antlr4.js -Dlanguage=JavaScript -o ./lib/parser NanoSpec.g4'"
  },
  "standard": {
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreventuravale/nanospec.git"
  },
  "keywords": [
    "bdd",
    "gherkin",
    "jasmine"
  ],
  "author": "andreventuravale",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreventuravale/nanospec/issues"
  },
  "homepage": "https://github.com/andreventuravale/nanospec#readme",
  "devDependencies": {
    "antlr4": "^4.7.1",
    "antlr4-cli": "^4.5.3",
    "chai": "^4.1.2",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "lodash": "^4.17.10"
  }
}
