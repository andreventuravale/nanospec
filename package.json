{
  "name": "nanospec",
  "version": "2.0.0",
  "description": "A javascript parser for the Gherkin language.",
  "scripts": {
    "check": "npm run lint:check && npm run test",
    "cover": "nyc --exit --reporter=lcov --reporter=text --per-file npm run test",
    "lint:check": "standard",
    "lint": "standard --fix",
    "test:dev": "mocha -ui tdd -watch --recursive test",
    "test": "mocha -ui tdd --recursive test"
  },
  "standard": {
    "globals": [
      "setup",
      "suite",
      "teardown",
      "test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreventuravale/nanospec.git"
  },
  "keywords": [
    "bdd",
    "gherkin",
    "jasmine",
    "mocha"
  ],
  "author": "andreventuravale",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreventuravale/nanospec/issues"
  },
  "homepage": "https://github.com/andreventuravale/nanospec#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "standard": "^12.0.1",
    "testdouble": "^3.12.1"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "nanogram": "0.0.1"
  }
}
